<main>

<p id="notice"></p>
    <div class="container">
      <div class="row">
         <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
              <h2>Editing Book</h2>

              <div class="container">


         <div class="container px-5 px-sm-0">
                <% if @book.errors.any? %>
           <div id=error_explanation>
              <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
                  <ul>
                    <% @book.errors.full_messages.each do |message| %>
                   <li><%= message %></li>
                    <% end %>
                 </ul>
         </div>
                <% end %>


               <%= form_with model: @book do |f| %>
              <div class="form-group">
                <label for="book_title">Title</label>
              </div>
                <%= f.text_field :title, autofocus: true, id:"inputName" %>

                <div class="form-group">Opiniton
                  <label for="inputImage"></label>
                </div>
                   <%= f.text_area :body, autofocus: true, id:"inputName" %>

                   <div class="Update Book">
                      <%= f.submit "Update Book" , class: 'btn btn-success' do %>
                      <% end %>
                   </div>
                <% end %>

                <div>
                <%= link_to "Show",book_path(@book.id)%>
                |
                <%= link_to "Back",books_path %>
                </div>
        </div>
      </div>
    </div>
</main>