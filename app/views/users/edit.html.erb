<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <%= form_with model: @user do |f| %>

        <div class="form-group">
          <label for="user_name">Name</label>
        </div>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>

        <div class="form-group">
        <label for="user_image">Image</label>
        </div>

        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

        <div class="form-group">

        </div>


        <div class="form-group">
        <label for="inputImage">Intoroduction</label>
        </div>
        <%= f.text_area :introduction, autofocus: true, id:"inputName", placeholder:"Intoroduction"%>


        <div class="Update User">

           <%= f.submit "Update User" , class: 'btn btn-secondary' do %>

           <% end %>

        </div>

        <% end %>
    </div>
  </div>
</div>




